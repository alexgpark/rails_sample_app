<h1>Movies</h1>

<%= link_to("Add New Movie", new_movie_path) %>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to(movie.title, movie_path(movie)) %></h2>
    </header>
    <p>
      <%= movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= number_to_currency(movie.total_gross) %></td>
      </tr>
    </table>
  </article>
<% end %>
